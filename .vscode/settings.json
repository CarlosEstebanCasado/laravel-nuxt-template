{
  "files.watcherExclude": {
    "**/node_modules": true,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.cache": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.cache": true
  },
  "typescript.tsserver.watchOptions": {
    "excludeDirectories": [
      "backend/node_modules",
      "frontend/node_modules",
      "backend/vendor",
      "frontend/.nuxt",
      "frontend/node_modules/.cache"
    ]
  },
  "typescript.tsserver.maxTsServerMemory": 4096
}
